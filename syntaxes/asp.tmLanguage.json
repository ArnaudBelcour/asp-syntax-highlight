{
	"name": "asp",
	"scopeName": "source.asp",
	"patterns": [
		{
			"include": "#keywords"
		}
	],
	"repository": {
		"keywords": {
			"patterns":[
			{
				"name": "comment.asp",
				"begin": "%\\*",
				"end": "\\*%"
				},
			{
				"name": "comment.asp",
				"match": "%.*"
			},
			{
				"name": "constant.language.asp",
				"match": "\\bnot\\b"
			},
			{
				"name": "punctuation.section.embedded.asp",
				"match": ":-"
			},
			{
				"name": "punctuation.separator.and.asp",
				"match": ","
			},
			{
				"name": "punctuation.separator.or.asp",
				"match": ";"
			},
			{
				"name": "support.constant.cut.asp",
				"match": "!="
			},
			{
				"name": "keyword.asp",
				"match": "#(count|max|min|sum)\\b"
			},
			{
				"name": "support.function.asp",
				"comment": "Gringo functions",
				"match": "#(maximize|minimize|show|hide|showsig|sup|inf|true|false|forget|external|cumulative|disjoint|const|base|include|program)\\b"
			},
			{
				"comment": "Gringo script",
				"begin": "#script\\s*\\(\\s*python\\s*\\)",
				"beginCaptures": {
				  "0": {
					"name": "support.function.asp"
				  }
				},
				"end": "#end",
				"endCaptures": {
				  "0": {
					"name": "support.function.asp"
						}
				},
				"patterns":[
				  {
						"include": "source.python"
				  }
				]
			},
			{
				"name": "entity.name.tag.asp",
				"match": "[a-z][A-Za-z0-9_]*"
			  },
			  {
				"name": "variable.asp",
				"match": "\\b[A-Z][A-Za-z0-9_]*"
			  },
			  {
				"name": "string.asp",
				"begin": "\"",
				"end": "\""
			  },
			  {
				"name": "constant.numeric.asp",
				"match": "0|[1-9][0-9]*"
			}]
		}
	}
}